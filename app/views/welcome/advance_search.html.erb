<h1>Make A Search</h1>

  <%= form_tag advance_search_path, method: 'get' do %>
    <p>
      <%= label_tag :technology %>
      <%= text_field_tag :technology %> </br></br>

      <%= label_tag :city %>
      <%= text_field_tag :city %> </br></br>

      <%= submit_tag 'Search', name: nil %>
    </p>

  <% if @user_details %>
    <% @user_details.each do |user_detail| %>
      <p>
        First Name: <%= user_detail[:fname] %></br>
        Email: <%= user_detail[:email] %>
        <%= link_to "Send Message", personal_message_path(receiver: user_detail[:id]) %>
      </p>
    <% end %>
  <% end %>

<% end %>

