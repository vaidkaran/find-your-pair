<h1>Add a new Circle</h1>


<%= form_for @circle, url: circles_path, method: :post do |f| %>

  <%= render 'shared/error_messages', model: f.object %>





  <div class="field">
    <%= f.label :circle_name %>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :motive_of_this_circle %>
    <%= f.text_field :motive %>
  </div>

  <div class="actions">
    <%= f.submit "Create Circle" %>
  </div>
<% end %>

