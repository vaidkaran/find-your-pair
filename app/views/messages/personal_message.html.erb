<h1>In Personal message (we do have the sender_user_id and receiver_user_id)</h1>

<% if @message_thread %>
  <% @message_thread.each do |message| %>
    <p>
    <%= User.find_by_id(message[:sender]).fname %>: </ br>
    <%= message[:content] %> </br>
    </p>
  <% end %>
<% end %>


<%= form_for(@message, url: messages_path, action: :create, method: :post) do |f|%>
  <%= f.label :message %>
  <%= f.text_field :content %>
  <%= f.hidden_field :sender, {value: @sender} %>
  <%= f.hidden_field :receiver, {value: @receiver} %>

  <%= f.submit "Send" %>
<% end %>

